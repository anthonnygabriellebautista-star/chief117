#OE
print("Welcome to the Movie Ticket Pricing Lane! ")

day_type = input("What day is it? ").strip().lower()
customer_type = input("Customer type (regular/student/senior): ").strip().lower()
movie_time = int(input("Enter movie time: "))
num_tickets = int(input("Enter number of tickets: "))

#time
if not (9 <= movie_time <= 22):
    print("Error: The cinema is only open from 09:00 to 22:00.")
elif num_tickets <= 0:
    print("Error: Ticket count must be a positive number.")
else:
#yyung day ng panonood whether what kind of 
    if day_type == "Weekend":
        base_price = 300
    else:
        base_price = 200

#discount 
    discount_rate = 0.0
    if customer_type == "student":
        discount_rate = 0.20 #USD
    elif customer_type == "senior":
        discount_rate = 0.30 #USD

    price_after_customer_disc = base_price * (1 - discount_rate)

    
    matinee_discount = 0
    if movie_time < 12:
        matinee_discount = price_after_customer_disc * 0.10 #USD
    
    price_after_matinee = price_after_customer_disc - matinee_discount

    
    group_discount = 0
    subtotal = price_after_matinee * num_tickets
    if num_tickets >= 5:
        group_discount = subtotal * 0.05 #USD

    final_total = subtotal - group_discount

#resibo sa Ticket
    print("\n" + "="*30)
    print("      ITEMIZED RECEIPT")
    print("="*30)
    print(f"Day Type:      {day_type.capitalize()}")
    print(f"Customer:      {customer_type.capitalize()}")
    print(f"Base Price:    ${base_price:.2f}")
    print(f"Tickets:       {num_tickets}")
    
    if discount_rate > 0:
        print(f"Type Discount: -${(base_price * discount_rate):.2f} per ticket")
    if matinee_discount > 0:
        print(f"Matinee Disc:  -${matinee_discount:.2f} per ticket")
    if group_discount > 0:
        print(f"Group Disc:    -${group_discount:.2f} (5% off total)")
        
    print("-" * 30)
    print(f"TOTAL AMOUNT:  ${final_total:.2f}")
    print("="*30)
#I swaped the USD sa PHP
